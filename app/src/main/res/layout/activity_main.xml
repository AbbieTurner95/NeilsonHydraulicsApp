<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/neilson_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="top"
        android:elevation="4dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/neilsonlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_below="@+id/neilson_logo"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/qr_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:padding="25dp"
            android:text="@string/scan_qr_code"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/take_pic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:padding="25dp"
            android:text="@string/scan_a_image"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/socialmedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:elevation="2dp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/linkinin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:elevation="2dp"
            android:src="@drawable/linkined" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:elevation="2dp"
            android:src="@drawable/facebook" />

    </LinearLayout>

</RelativeLayout>